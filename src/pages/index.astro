---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Role from '../components/Role.astro';
import Projects from '../components/Projects.astro';
import Social from '../components/Social.astro';

// Types
interface Tech {
  name: string;
  icon: string;
}

interface Project {
  name: string;
  description?: string;
  githubUrl: string;
  technologies: Tech[];
}

// Personal Information
const PERSONAL_INFO = {
  name: 'Eben Bentley',
  displayName: 'EBEN BENTLEY',
  title: 'Software Engineer',
  company: 'Raytheon UK',
  bio: 'Design and deliver end-to-end software systems: from backend services and APIs, to full-stack applications, data-intensive services, and cloud infrastructure. Experienced across Go, Python, Node.js, TypeScript, React, Kubernetes, Docker, Terraform, AWS, and Azure. I focus on scalable, resilient, and secure solutions that solve real-world problems.',
  roleDescription: 'Develop and maintain full-stack systems, including high-availability backend services, REST APIs, miroservices and cloud infrastructure',
} as const;

// Tech Stack
const techStack: Tech[] = [
  // Languages
  { name: 'Go', icon: '/icons/go.svg' },
  { name: 'Python', icon: '/icons/python.svg' },
  { name: 'TypeScript', icon: '/icons/typescript.png' },

  // Runtimes / Frameworks
  { name: 'NodeJs', icon: '/icons/nodejs.png' },

  // APIs & Communication
  { name: 'REST APIs', icon: '/icons/rest-api.svg' },

  // Frontend
  { name: 'React', icon: '/icons/react.png' },

  // Databases
  { name: 'PostgreSQL', icon: '/icons/postgresql.svg' },
  { name: 'MySQL', icon: '/icons/mysql.svg' },
  { name: 'MongoDB', icon: '/icons/mongodb.svg' },

  // Messaging & Async
  { name: 'RabbitMQ', icon: '/icons/rabbitmq.svg' },

  // Containers & Orchestration
  { name: 'Docker', icon: '/icons/docker.svg' },
  { name: 'Kubernetes', icon: '/icons/kubernetes.svg' },
  { name: 'Red Hat', icon: '/icons/redhat.png' },

  // Cloud Providers
  { name: 'AWS', icon: '/icons/aws.svg' },
  { name: 'Azure', icon: '/icons/azure.png' },

  // Data / Search
  { name: 'ElasticSearch', icon: '/icons/elasticsearch.png' },
  { name: 'OpenSearch', icon: '/icons/opensearch.png' },
  { name: 'Azure Data Factory', icon: '/icons/azure-data-factory.png' },

  // Infrastructure as Code
  { name: 'Terraform', icon: '/icons/terraform.svg' },
  { name: 'Ansible', icon: '/icons/ansible.svg' },
];

// Projects
const projects: Project[] = [
  {
    name: 'Snaphook',
    description: 'Lightweight, high-performance screenshot utility for Windows built with Go',
    githubUrl: 'https://github.com/Eben-Bentley/snaphook',
    technologies: [
      { name: 'Go', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/go/go-original.svg' },
    ],
  },
  {
    name: 'Portfolio Website',
    githubUrl: 'https://github.com/Eben-Bentley/Personal-Blog',
    technologies: [
      { name: 'Astro', icon: 'https://img.icons8.com/?size=64&id=lckHFUP7nJhG&format=png' },
      { name: 'TailwindCSS', icon: 'https://icon.icepanel.io/Technology/svg/Tailwind-CSS.svg' }
    ],
  }
];
---

<Layout
  title={`${PERSONAL_INFO.name} - ${PERSONAL_INFO.title}`}
  name={PERSONAL_INFO.name}
>
  <div class="container max-w-4xl mx-auto space-y-16">

    <Hero
      name={PERSONAL_INFO.displayName}
      title={PERSONAL_INFO.title}
      bio={PERSONAL_INFO.bio}
    />

    <Role
      role={PERSONAL_INFO.title}
      company={PERSONAL_INFO.company}
      description={PERSONAL_INFO.roleDescription}
      techStack={techStack}
    />

    <Projects projects={projects} />

    <Social />

  </div>
</Layout>
