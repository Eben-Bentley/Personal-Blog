---
import TechIcon from './TechIcon.astro';

interface Tech {
  name?: string;
  icon: string;
}

interface Project {
  name: string;
  description: string;
  githubUrl: string;
  technologies: Tech[];
}

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<section class="section">
  <h2 class="section-title"><span class="section-number">02.</span> Projects</h2>

  <div class="flex flex-col gap-6">
    {projects.map((project) => (
      <div class="border-b border-border pb-5 last:border-b-0 last:pb-0">
        <div class="mb-1.5">
          <h3 class="text-[0.9375rem] sm:text-sm font-semibold text-text-primary m-0">
            <a href={project.githubUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1 text-text-primary no-underline transition-colors duration-200 hover:text-accent">
              {project.name}
              <svg
                class="w-4 h-4"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                width="16"
                height="16"
                fill="currentColor"
              >
                <path d="M14 3h7v7h-2V6.41l-9.29 9.3-1.42-1.42L17.59 5H14V3z"/>
                <path d="M5 5h9v2H6.41l9.3 9.29-1.42 1.42L5 6.41V15H3V5z" fill="none"/>
              </svg>
            </a>
          </h3>
        </div>
        <p class="text-[0.9375rem] sm:text-sm text-text-secondary leading-relaxed mb-3">{project.description}</p>

        <div class="flex flex-wrap gap-5">
          {project.technologies.map((tech) => (
            <TechIcon icon={tech.icon} name={tech.name ?? ''} />
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
