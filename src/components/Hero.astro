---
interface Props {
  name: string;
  title: string;
  bio: string;
}

const { name, title, bio } = Astro.props;
---

<section class="section hero-section">
  <h1 class="hero-name"><span class="section-number">00.</span> {name}</h1>
  <p class="hero-title">{title}</p>
  <p class="hero-bio">{bio}</p>
</section>

<style>
  .hero-section {
    margin-bottom: 2rem;
  }

  .hero-name {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--accent);
    margin-bottom: 0.375rem;
    letter-spacing: -0.02em;
  }

  .hero-title {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }

  .hero-bio {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.5;
    max-width: 600px;
  }

  @media (max-width: 768px) {
    .hero-name {
      font-size: 1.5rem;
    }

    .hero-title {
      font-size: 0.875rem;
    }

    .hero-bio {
      font-size: 0.875rem;
    }
  }
</style>
