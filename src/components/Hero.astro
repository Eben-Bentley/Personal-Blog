---
interface Props {
  name: string;
  title: string;
  bio: string;
}

const { name, title, bio } = Astro.props;
---

<section class="section mb-8">
  <h1 class="text-[1.75rem] sm:text-2xl font-bold text-accent mb-1.5 tracking-tight">
    <span class="section-number">00.</span> {name}
  </h1>
  <p class="text-[0.9375rem] sm:text-sm font-medium text-text-secondary mb-2">
    {title}
  </p>
  <p class="text-[0.9375rem] sm:text-sm text-text-secondary leading-relaxed max-w-[600px]">
    {bio}
  </p>
</section>
