---
interface Props {
  name: string;
  icon: string;
}

const { name, icon } = Astro.props;
---

<div class="tech-item" title={name}>
  <img src={icon} alt={name} class="tech-icon" />
  <span class="tech-name">{name}</span>
</div>

<style>
  .tech-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.375rem;
    transition: all 0.3s ease;
    cursor: default;
  }

  .tech-item:hover {
    transform: translateY(-4px);
  }

  .tech-item:hover .tech-name {
    color: var(--accent);
  }

  .tech-name {
    font-size: 0.625rem;
    font-weight: 500;
    color: var(--text-secondary);
    text-align: center;
    transition: color 0.2s ease;
  }
</style>
