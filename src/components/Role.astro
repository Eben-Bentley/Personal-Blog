---
import TechIcon from './TechIcon.astro';

interface Tech {
  name?: string;
  icon: string;
}

interface Props {
  role: string;
  company: string;
  description: string;
  techStack: Tech[];
}

const { role, company, description, techStack } = Astro.props;
---

<section class="section">
  <h2 class="section-title">
    <span class="section-number">01.</span> Current Role
  </h2>

  <div class="mb-2">
    <h3 class="text-[0.9375rem] font-semibold text-accent mb-1">{role}</h3>
    <p class="text-[0.9375rem] text-accent mb-3">{company}</p>
  </div>

  <p class="text-[0.9375rem] text-text-secondary leading-relaxed mb-5">{description}</p>

  <div>
    <div class="flex flex-wrap gap-5">
      {techStack.map((tech) => (
        <TechIcon icon={tech.icon} name={tech.name ?? ''} />
      ))}
    </div>
  </div>
</section>
