  ---
  import TechIcon from './TechIcon.astro';

  interface Tech {
    name?: string;
    icon: string;
  }

  interface Props {
    role: string;
    company: string;
    description: string;
    techStack: Tech[];
  }

  const { role, company, description, techStack } = Astro.props;
  ---

  <section class="section role-section">
    <h2 class="section-title">
      <span class="section-number">01.</span> Current Role
    </h2>

    <div class="role-header">
      <h3 class="role-title">{role}</h3>
      <p class="company-name">{company}</p>
    </div>

    <p class="role-description">{description}</p>

    <div class="tech-stack">
      <div class="tech-grid">
        {techStack.map((tech) => (
          <div class="tech-item" aria-label={tech.name} tabindex="0">
            <TechIcon icon={tech.icon} />
            <span class="tech-tooltip">{tech.name}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <style>
  .role-header {
    margin-bottom: 0.5rem;
  }

  .role-title {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--accent);
    margin-bottom: 0.25rem;
  }

  .company-name {
    font-size: 0.9375rem;
    color: var(--accent);
    margin-bottom: 0.75rem;
  }

  .role-description {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin-bottom: 1.25rem;
  }

  /* TECH GRID */
  .tech-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.625rem;
  }

  .tech-item {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    cursor: default;
  }

  /* TOOLTIP */
  .tech-tooltip {
    position: absolute;
    bottom: calc(100% + 0.4rem);
    left: 50%;
    transform: translateX(-50%);
    white-space: nowrap;

    background: var(--bg-elevated, #111);
    color: var(--text-primary, #fff);
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;

    opacity: 0;
    pointer-events: none;
    transition: opacity 120ms ease, transform 120ms ease;
  }

  /* HOVER + FOCUS SHOW TOOLTIP */
  .tech-item:hover .tech-tooltip,
  .tech-item:focus .tech-tooltip {
    opacity: 1;
    transform: translateX(-50%) translateY(-2px);
  }

  @media (max-width: 768px) {
    .tech-grid {
      gap: 0.5rem;
    }
  }
  </style>
